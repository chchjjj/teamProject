<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.teamProject.mapper.ApplyStoreMapper">

    <select id="getStoreInfo" parameterType="int" resultType="com.example.teamProject.applyStore.model.ApplyStore">
        SELECT
        STORE_ID,
        STORE_NAME,
        USER_ID
        FROM SELLER_INFO_TBL
        WHERE STORE_ID = #{storeId}
    </select>

    <!-- 'insert' 태그에서 resultType을 제거 -->
    <insert id="insertSellerInfo" parameterType="hashmap">
        INSERT INTO SELLER_INFO_TBL
        VALUES (
        SELLER_INFO_SEQ.NEXTVAL,
        #{storeName},
        #{userId},
        #{businessNo},
        #{storeIntro},
        #{deliveryYn},
        #{isChatEnabled},
        #{chatStart},
        #{chatEnd},
        #{storeAddr},
        #{storeArea},
        #{storePass},
        #{rejectReason},
        #{gradeCode},
        #{membership},
        SYSDATE,
        SYSDATE
        )
    </insert>

    <!-- 'insert' 태그에서 resultType을 제거 -->
    <insert id="insertStoreImages" parameterType="hashmap">
        INSERT INTO SELLER_IMG_TBL
        VALUES (
        #{storeId},
        #{fileUse},
        #{filePath},
        #{fileName},
        #{fileOrgName},
        #{fileExt}
        )
    </insert>

</mapper>
